<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="30.0"
      xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.AdminViajesModificarHorarioController">
    <VBox.margin>
        <Insets top="20.0" />
    </VBox.margin>

    <Label text="MODIFICAR HORARIO" styleClass="adminSectionTitle"/>

    <VBox alignment="CENTER" spacing="20.0">

        <ComboBox fx:id="comboBoxIdViaje" promptText="ID Viaje" styleClass="combo_box" prefWidth="350" maxWidth="350"
                  onAction="#onViajeSeleccionado"/>

        <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="350" maxWidth="350">
            <DatePicker fx:id="datePickerSalida" promptText="NUEVA FECHA SALIDA" styleClass="fecha" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="fieldSalidaHora" promptText="HH:mm" styleClass="inputField" prefWidth="100"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="350" maxWidth="350">
            <DatePicker fx:id="datePickerLlegada" promptText="NUEVA FECHA LLEGADA" styleClass="fecha" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="fieldLlegadaHora" promptText="HH:mm" styleClass="inputField" prefWidth="100"/>
        </HBox>

        <Button mnemonicParsing="false" onAction="#onModificarClick"
                styleClass="ingresarButton" text="MODIFICAR" prefWidth="200"/>

        <Label fx:id="labelMensaje" styleClass="errorLabel" wrapText="true"/>
    </VBox>
</VBox>