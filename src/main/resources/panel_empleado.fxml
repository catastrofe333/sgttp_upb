<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="720.0" prefWidth="1280.0" styleClass="adminPanelRoot"
            xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@styles.css" fx:controller="controlador.PanelEmpleadoController"> <top>
    <HBox id="menu_superior" alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1280.0">
        <padding>
            <Insets top="10.0" right="24.0" bottom="10.0" left="24.0"/>
        </padding>
        <Button mnemonicParsing="false" onAction="#onLogoutClick" styleClass="backButton">
            <graphic>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/imagenes/flechaAtras.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="labelTituloEmpleado" text="EMPLEADO" styleClass="adminTitle"/> <Region HBox.hgrow="ALWAYS"/>
        <Region prefWidth="50"/>
    </HBox>
</top>

    <right> <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="20.0" styleClass="adminSideMenu">
        <padding>
            <Insets top="40.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>
        <Button fx:id="btnEquipajes" mnemonicParsing="false" onAction="#onEquipajesClick"
                text="EQUIPAJES" styleClass="adminMenuButton" maxWidth="Infinity"/>
        <Button fx:id="btnBoletos" mnemonicParsing="false" onAction="#onBoletosClick"
                text="BOLETOS" styleClass="adminMenuButton" maxWidth="Infinity"/>
        <Button fx:id="btnViajes" mnemonicParsing="false" onAction="#onViajesClick"
                text="VIAJES" styleClass="adminMenuButton" maxWidth="Infinity"/>
    </VBox>
    </right>

    <center>
        <StackPane fx:id="contentAreaEmpleado" styleClass="adminContentArea"> <Label fx:id="labelBienvenida" text="Bienvenido, Empleado" styleClass="welcomeMessage"/> </StackPane>
    </center>

</BorderPane>