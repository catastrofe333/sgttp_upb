<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="30.0"
      xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.AdminEmpleadosModificarUsuarioController">
    <VBox.margin><Insets top="20.0" /></VBox.margin>

    <Label text="MODIFICAR USUARIO" styleClass="adminSectionTitle"/>

    <VBox alignment="CENTER" spacing="20.0" prefWidth="350">
        <ComboBox fx:id="comboBoxIdEmpleado" promptText="ID Empleado" styleClass="combo_box" prefWidth="350"
                  onAction="#onEmpleadoSeleccionado"/>
        <TextField fx:id="fieldNuevoUsuario" promptText="Nuevo Usuario" styleClass="inputField" prefWidth="350"/>
        <Button mnemonicParsing="false" onAction="#onModificarClick"
                styleClass="ingresarButton" text="MODIFICAR" prefWidth="200"/>
        <Label fx:id="labelMensaje" styleClass="errorLabel" text="" wrapText="true"/>
    </VBox>
</VBox>