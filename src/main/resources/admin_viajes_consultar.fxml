<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="30.0"
      xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.AdminViajesConsultarController">
    <VBox.margin>
        <Insets top="20.0" />
    </VBox.margin>

    <Label text="CONSULTAR VIAJE" styleClass="adminSectionTitle"/>

    <VBox alignment="CENTER" spacing="20.0" prefWidth="450">
        <ComboBox fx:id="comboBoxIdViaje" promptText="Seleccionar ID Viaje" styleClass="combo_box" prefWidth="350"
                  onAction="#onViajeSeleccionado"/>

        <Label fx:id="labelMensaje" styleClass="errorLabel" wrapText="true" visible="false" managed="false"/>

        <VBox fx:id="vboxResultado" styleClass="loginCard" spacing="15.0"
              prefWidth="450" visible="false" managed="false">
            <padding><Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/></padding>

            <Label fx:id="labelTituloViaje" text="VIAJE VI000" styleClass="tituloDetalleViaje"/>
            <Separator/>

            <HBox spacing="10"><Label text="Visibilidad:" styleClass="campoLabel"/><Label fx:id="labelVisibilidad" text="VISIBLE"/></HBox>
            <HBox spacing="10"><Label text="ID Ruta:" styleClass="campoLabel"/><Label fx:id="labelIdRuta" text="RU001"/></HBox>
            <HBox spacing="10"><Label text="Origen:" styleClass="campoLabel"/><Label fx:id="labelOrigen" text="BOGOTA"/></HBox>
            <HBox spacing="10"><Label text="Destino:" styleClass="campoLabel"/><Label fx:id="labelDestino" text="MEDELLIN"/></HBox>
            <HBox spacing="10"><Label text="ID Tren:" styleClass="campoLabel"/><Label fx:id="labelIdTren" text="TR001"/></HBox>
            <HBox spacing="10"><Label text="Horario:" styleClass="campoLabel"/><Label fx:id="labelFechas" text="01/01/2025 - 01/01/2025"/></HBox>
            <HBox spacing="10"><Label text="Estado:" styleClass="campoLabel"/><Label fx:id="labelEstado" text="PENDIENTE"/></HBox>
            <HBox spacing="10"><Label text="Valor Base:" styleClass="campoLabel"/><Label fx:id="labelValorBase" text="\$225.000"/></HBox>

            <Button fx:id="btnCamino" onAction="#onCaminoClick" text="Ver Camino" styleClass="adminActionButton" maxWidth="Infinity"/>
        </VBox>
    </VBox>
</VBox>