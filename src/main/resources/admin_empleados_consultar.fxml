<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="30.0"
      xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.AdminEmpleadosConsultarController">
    <VBox.margin><Insets top="20.0" /></VBox.margin>

    <Label text="CONSULTAR EMPLEADO" styleClass="adminSectionTitle"/>

    <VBox alignment="CENTER" spacing="20.0" prefWidth="450">
        <ComboBox fx:id="comboBoxIdEmpleado" promptText="Seleccionar ID Empleado" styleClass="combo_box" prefWidth="350"
                  onAction="#onEmpleadoSeleccionado"/>

        <Label fx:id="labelMensaje" styleClass="errorLabel" text="" wrapText="true" visible="false" managed="false"/>

        <VBox fx:id="vboxResultado" alignment="TOP_LEFT" styleClass="loginCard" spacing="10.0"
              prefWidth="450" visible="false" managed="false">
            <padding><Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/></padding>

            <Label fx:id="labelTituloEmpleado" text="EMPLEADO EM000" styleClass="tituloDetalleViaje"/>
            <Separator/>

            <HBox spacing="10"><Label text="Tipo ID:" styleClass="campoLabel"/><Label fx:id="labelTipoId" text="CC"/></HBox>
            <HBox spacing="10"><Label text="Número ID:" styleClass="campoLabel"/><Label fx:id="labelNumeroId" text="123456789"/></HBox>
            <HBox spacing="10"><Label text="Nombres:" styleClass="campoLabel"/><Label fx:id="labelNombres" text="Nombre Empleado"/></HBox>
            <HBox spacing="10"><Label text="Apellidos:" styleClass="campoLabel"/><Label fx:id="labelApellidos" text="Apellido Empleado"/></HBox>
            <HBox spacing="10"><Label text="Cargo:" styleClass="campoLabel"/><Label fx:id="labelCargo" text="Cargo Empleado"/></HBox>
            <HBox spacing="10"><Label text="Usuario:" styleClass="campoLabel"/><Label fx:id="labelUsuario" text="usuario.emp"/></HBox>
            <HBox spacing="10"><Label text="Contraseña:" styleClass="campoLabel"/><Label fx:id="labelContrasena" text="********"/></HBox>
        </VBox>
    </VBox>
</VBox>