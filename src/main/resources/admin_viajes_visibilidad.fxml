<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="30.0"
      xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.AdminViajesVisibilidadController">
    <VBox.margin>
        <Insets top="20.0" />
    </VBox.margin>

    <Label text="VISIBILIDAD VIAJE" styleClass="adminSectionTitle"/>

    <VBox alignment="CENTER" spacing="20.0" prefWidth="350">
        <ComboBox fx:id="comboBoxIdViaje" promptText="ID Viaje" styleClass="combo_box" prefWidth="350"
                  onAction="#onViajeSeleccionado"/>

        <ComboBox fx:id="comboBoxVisibilidad" promptText="VISIBILIDAD" styleClass="combo_box" prefWidth="350"/>

        <Button mnemonicParsing="false" onAction="#onActualizarClick"
                styleClass="ingresarButton" text="ACTUALIZAR" prefWidth="200"/>

        <Label fx:id="labelMensaje" styleClass="errorLabel" text="" wrapText="true"/>
    </VBox>
</VBox>