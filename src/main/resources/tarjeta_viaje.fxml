<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER_LEFT" prefHeight="140.0" prefWidth="900.0" styleClass="travelCard"
      xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.TarjetaViaje">
    <padding>
        <Insets left="40.0" right="40.0"/>
    </padding>

    <VBox alignment="CENTER_LEFT" spacing="5.0" prefWidth="180.0">
        <Label text="Salida" styleClass="cardHeader"/>
        <Label fx:id="labelHoraSalida" text="08:30" styleClass="cardTime"/>
        <Label fx:id="labelOrigen" text="MEDELLÍN" styleClass="cardLocation"/>
    </VBox>


    <VBox alignment="CENTER_LEFT" spacing="5.0" prefWidth="180.0">
        <Label text="Llegada" styleClass="cardHeader"/>
        <Label fx:id="labelHoraLlegada" text="14:00" styleClass="cardTime"/>
        <Label fx:id="labelDestino" text="BOGOTÁ" styleClass="cardLocation"/>
    </VBox>

    <Region HBox.hgrow="ALWAYS"/>

    <VBox alignment="CENTER_RIGHT" prefWidth="140.0">
        <Label text="Recomendado" styleClass="recommendedLabel"/>
        <Region prefHeight="10.0"/>
        <Button fx:id="btnVer" mnemonicParsing="false" styleClass="verButton" text="VER" prefWidth="120.0" />
    </VBox>
</HBox>