<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.EmpleadoBoletosConsultarController">
    <VBox.margin><Insets top="20.0" /></VBox.margin>
    <Label text="CONSULTAR BOLETO POR ID" styleClass="adminSectionTitle" wrapText="true"/>

    <HBox alignment="CENTER" spacing="10.0" prefWidth="400">
        <ComboBox fx:id="comboBoxInputConsulta" promptText="ID Boleto" styleClass="combo_box" HBox.hgrow="ALWAYS"/>
        <Button text="BUSCAR" onAction="#onBuscarClick" styleClass="ingresarButton"/>
    </HBox>
    <Label fx:id="labelMensaje" styleClass="errorLabel" text="" wrapText="true" visible="false" managed="false"/>

    <ScrollPane fx:id="scrollPaneResultados" fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="transparentScroll" visible="false" managed="false">
        <VBox fx:id="vboxResultados" spacing="20.0" alignment="TOP_CENTER">
            <padding><Insets top="10.0" bottom="10.0"/></padding>
        </VBox>
    </ScrollPane>
    <padding> <Insets bottom="30.0" left="30.0" right="30.0"/> </padding>
</VBox>