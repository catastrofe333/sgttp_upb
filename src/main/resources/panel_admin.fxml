<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="720.0" prefWidth="1280.0" styleClass="adminPanelRoot"
            xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@inicio.css" fx:controller="controlador.PanelAdminController">

    <top>
        <HBox id="menu_superior" alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1280.0">
            <padding>
                <Insets top="10.0" right="24.0" bottom="10.0" left="24.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#onLogoutClick" styleClass="backButton">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@/imagenes/flechaAtras.png"/> </ImageView>
                </graphic>
            </Button>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="ADMINISTRADOR" styleClass="adminTitle"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Region prefWidth="50"/>
        </HBox>
    </top>

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="20.0" styleClass="adminSideMenu">
            <padding>
                <Insets top="40.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <Button fx:id="btnTrenes" mnemonicParsing="false" onAction="#onTrenesClick"
                    text="TRENES" styleClass="adminMenuButton" maxWidth="Infinity"/>
            <Button fx:id="btnRutas" mnemonicParsing="false" onAction="#onRutasClick"
                    text="RUTAS" styleClass="adminMenuButton" maxWidth="Infinity"/>
            <Button fx:id="btnViajes" mnemonicParsing="false" onAction="#onViajesClick"
                    text="VIAJES" styleClass="adminMenuButton" maxWidth="Infinity"/>
            <Button fx:id="btnEmpleados" mnemonicParsing="false" onAction="#onEmpleadosClick"
                    text="EMPLEADOS" styleClass="adminMenuButton" maxWidth="Infinity"/>
            <Button fx:id="btnHistorial" mnemonicParsing="false" onAction="#onHistorialClick"
                    text="HISTORIAL" styleClass="adminMenuButton" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="adminContentArea">
            <Label text="Bienvenido, Administrador" styleClass="welcomeMessage"/>
        </StackPane>
    </center>

</BorderPane>